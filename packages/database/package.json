{
  "name": "@handoverkey/database",
  "version": "1.0.0",
  "description": "Type-safe database operations with Kysely",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "migrate:latest": "node dist/migrations/runner.js",
    "migrate:rollback": "node dist/migrations/runner.js rollback"
  },
  "dependencies": {
    "kysely": "^0.28.8",
    "pg": "^8.17.1"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.3",
    "@types/pg": "^8.16.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
