{
  "name": "handoverkey",
  "version": "0.1.0",
  "description": "A stupidly secure, open-source digital legacy platform with dead man's switch functionality",
  "private": true,
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/shared",
    "packages/api"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "clean": "turbo run clean",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "db:migrate": "cd packages/api && npm run migrate",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "@types/node": "^24.8.1",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/handoverkey/handoverkey.git"
  },
  "keywords": [
    "digital-legacy",
    "dead-man-switch",
    "encryption",
    "security",
    "zero-knowledge",
    "open-source"
  ],
  "author": "HandoverKey Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/handoverkey/handoverkey/issues"
  },
  "homepage": "https://handoverkey.com"
}
