{
  "name": "@handoverkey/api",
  "version": "1.0.0",
  "description": "Backend API server for HandoverKey",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/handoverkey/handoverkey.git",
    "directory": "apps/api"
  },
  "author": "HandoverKey Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/handoverkey/handoverkey/issues"
  },
  "homepage": "https://handoverkey.com",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only --debounce 1000 --exit-child --ignore-watch node_modules --ignore-watch dist --ignore-watch ../../packages/shared/dist --ignore-watch ../../packages/database/dist --ignore-watch ../../packages/crypto/dist src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "migrate": "ts-node src/database/migrate.ts"
  },
  "dependencies": {
    "@handoverkey/crypto": "*",
    "@handoverkey/database": "*",
    "@handoverkey/shared": "*",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.65.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "isomorphic-dompurify": "^2.33.0",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.11",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "redis": "^5.10.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.10.1",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.15.6",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
