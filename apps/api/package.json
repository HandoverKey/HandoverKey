{
  "name": "@handoverkey/api",
  "version": "1.0.0",
  "description": "Backend API server for HandoverKey",
  "main": "dist/apps/api/src/index.js",
  "types": "dist/apps/api/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/handoverkey/handoverkey.git",
    "directory": "apps/api"
  },
  "author": "HandoverKey Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/handoverkey/handoverkey/issues"
  },
  "homepage": "https://handoverkey.com",
  "scripts": {
    "build": "tsc",
    "build:standalone": "npx esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --format=cjs --external:pg-native --alias:@handoverkey/shared=../../packages/shared/src/index.ts --alias:@handoverkey/shared/src=../../packages/shared/src --alias:@handoverkey/database=../../packages/database/src/index.ts --alias:@handoverkey/database/src=../../packages/database/src --alias:@handoverkey/crypto=../../packages/crypto/src/index.ts --alias:@handoverkey/crypto/src=../../packages/crypto/src",
    "build:migrate": "npx esbuild src/database/migrate.ts --bundle --platform=node --target=node20 --outfile=dist/migrate.js --format=cjs --external:pg-native --alias:@handoverkey/shared=../../packages/shared/src/index.ts --alias:@handoverkey/shared/src=../../packages/shared/src --alias:@handoverkey/database=../../packages/database/src/index.ts --alias:@handoverkey/database/src=../../packages/database/src --alias:@handoverkey/crypto=../../packages/crypto/src/index.ts --alias:@handoverkey/crypto/src=../../packages/crypto/src",
    "build:prod": "npm run build:standalone && npm run build:migrate && mkdir -p dist/schema && cp src/database/schema/*.sql dist/schema/ && mkdir -p dist/email-templates && cp src/services/email-templates/*.html dist/email-templates/",
    "dev": "ts-node-dev --respawn --transpile-only --debounce 1000 --exit-child --ignore-watch node_modules --ignore-watch dist --ignore-watch ../../packages/shared/dist --ignore-watch ../../packages/database/dist --ignore-watch ../../packages/crypto/dist src/index.ts",
    "start": "node dist/apps/api/src/index.js",
    "start:prod": "node dist/migrate.js && node dist/index.js",
    "test": "jest",
    "lint": "eslint src",
    "clean": "rm -rf dist",
    "migrate": "ts-node src/database/migrate.ts"
  },
  "dependencies": {
    "@handoverkey/crypto": "file:./packages/crypto",
    "@handoverkey/database": "file:./packages/database",
    "@handoverkey/shared": "file:./packages/shared",
    "bcryptjs": "^3.0.3",
    "bullmq": "^5.67.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "isomorphic-dompurify": "^2.35.0",
    "jsonwebtoken": "^9.0.3",
    "nodemailer": "^7.0.11",
    "pg": "^8.17.1",
    "pino": "^10.3.0",
    "pino-http": "^11.0.0",
    "pino-pretty": "^13.1.3",
    "prom-client": "^15.1.3",
    "redis": "^5.10.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.4",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.3",
    "esbuild": "^0.27.2",
    "esbuild-register": "^3.6.0",
    "jest": "^30.2.0",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
